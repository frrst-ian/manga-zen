<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Manga | Manga Zen</title>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>Manga Collection</h1>
        <div class="logo"></div>
        <%- include('navbar', {links:links}) %>
      </div>
    </header>
    <ul>
      <div class="manga-list">
        <% mangaList.forEach(manga => { %>
        <div class="manga-item">
          <li><%= manga.name %></li>
          <li><%= manga.published_year %></li>
          <a href="/manga/<%= manga.id %>">View Details</a>
        </div>
        <% }); %>
      </div>
    </ul>
  </body>
</html>
